@model BuisnessLayer.ViewModels.MoveProposalViewModel

<h1>Place an Inquire</h1>

<form asp-controller="MoveProposal" asp-action="Add" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="MoveFrom" class="col-form-label"></label>
            <input asp-for="MoveFrom" class="form-control" placeholder="MoveFrom">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="MoveTo" class="col-form-label"></label>
            <input asp-for="MoveTo" class="form-control" placeholder="MoveTo">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Distance" class="col-form-label"></label>
            <input asp-for="Distance" class="form-control" placeholder="Distance">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="LivingArea" class="col-form-label"></label>
            <input asp-for="LivingArea" class="form-control" placeholder="LivingArea">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="AtticArea" class="col-form-label"></label>
            <input asp-for="AtticArea" class="form-control" placeholder="AtticArea">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Piano" class="col-form-label"></label>
            <select asp-for="Piano" class="form-control" placeholder="Piano">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
    </div>
    <button class="btn btn-info" type="submit">Place Inquery</button>
</form>